<!DOCTYPE html>
<html lang="zh-cn">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 上海秒优</title>
    @Styles.Render("~/Content/easyuicss")
    <link href="~/Content/css/icon/icon.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/easyloader.js" type="text/javascript"></script>
    
    @RenderSection("head", required: false)
</head>
<body class="easyui-layout">
    <div data-options="region:'north'" style="height:45px;" class="head-north" border="false">
        <span class="head-left" style="color:white;font-size:20px;">
            供应链管理系统
        </span>
        <div class="easyui-panel head-right">
            <a href="#" class="easyui-menubutton" data-options="menu:'#mm1',iconCls:'icon-box_world'">中文</a>
            <a href="#" class="easyui-menubutton" data-options="menu:'#mm2',iconCls:'icon-user'">管理员</a>
            <a href="javascript:void(0);" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-user_go'">安全退出</a>
        </div>
        <div id="mm1" style="width:100px;">
            <div data-options="iconCls:'icon-box_world'">中文</div>
            <div data-options="iconCls:'icon-box_world'">英文</div>
            <div data-options="iconCls:'icon-box_world'">繁体</div>
        </div>
        <div id="mm2" style="width:100px;">
            <div data-options="iconCls:'icon-rainbow'">个人设置</div>
            <div data-options="iconCls:'icon-edit'">修改密码</div>
        </div>
    </div>
    <div data-options="region:'south',split:true" style="height:30px;background-color:#D2E0F2;">
        <div class="footer">Copyright © 2015-@DateTime.Today.Year 上海秒优供应链管理有限公司, All Rights Reserved</div>
    </div>
    <div data-options="region:'west',split:true" title="导航菜单" style="width:175px;"></div>
    <div data-options="region:'center'">
        @RenderBody()
    </div>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Content/layout.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
