<!DOCTYPE html>
<html lang="zh-cn">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 上海秒优</title>
    @Styles.Render("~/Content/easyuicss")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/easyloader.js" type="text/javascript"></script>
    <script src="~/Content/layout.js"></script>
    @RenderSection("head", required: false)
</head>
<body class="easyui-layout">
    <div data-options="region:'north'" style="height:45px" class="head-north">
        <span class="head-left" style="color:white;font-size:20px;">
            供应链管理系统
        </span>
    </div>
    <div data-options="region:'south',split:true" style="height:30px;background-color:#D2E0F2;">
        <div class="footer">Copyright © 2015-@DateTime.Today.Year 上海秒优供应链管理有限公司, All Rights Reserved</div>
    </div>
    <div data-options="region:'west',split:true" title="导航菜单" style="width:175px;"></div>
    <div data-options="region:'center'">
        @RenderBody()
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>
